####### Compiler, tools and options

BCB = D:\Borland\BCC55
CC	= bcc32
CXX	= bcc32
CFLAGS	=	-tWR -w -w-hid -tWM -O2 -v
CXXFLAGS=	-tWR -w -w-hid -tWM -O2 -v
INCPATH	=	 -I"$(BCB)\include"
LIB     =   tlib /C /P256
#LIBS	=	import32.lib $(BCB)\lib\PSDK\odbc32.lib cw32mti.lib
ZIP	=	zip -r -9
DEF_FILE =	
RES_FILE =	
COPY  =       copy
DEL   =       del
MOVE  =       move

####### Files

HEADERS =	src\graphicview.h \
			src\vec2web.h
SOURCES =	src\graphicview.cpp \
			src\vec2web.cpp \
			src\main.cpp
OBJECTS =	src\graphicview.obj \
			src\vec2web.obj
FORMS =	
DIST	=	
TARGET	=	vec2web

####### Implicit rules

.SUFFIXES: .cpp .cxx .cc .c

.cpp.obj:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o$@ $<

.cxx.obj:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o$@ $<

.cc.obj:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o$@ $<

.c.obj:
	$(CC) -c $(CFLAGS) $(INCPATH) -o$@ $<

####### Build rules

all:  $(TARGET)

$(TARGET): $(UICDECLS) $(OBJECTS)
	$(LIB) $(TARGET) @&&|
+src\graphicview.obj \
+src\vec2web.obj
|

clean:
	-del src\*.obj
	-del $(TARGET)

